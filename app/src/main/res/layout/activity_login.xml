<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/icon4"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_marginTop="125dp"
            android:layout_weight="1"
            android:contentDescription="TODO"
            android:src="@drawable/passlocklogo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_body"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/ll_body_main"
            android:layout_width="0dp"
            android:layout_height="161dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Username"
                android:inputType="textFilter"
                android:minHeight="48dp"
                android:textAlignment="center"
                android:textColorHint="#201D1D" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:hint="Password"
                android:inputType="textWebPassword"
                android:textAlignment="center"
                android:textColorHint="#1B1919" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_margin="20px"
                android:backgroundTint="#81D584"
                android:text="Login"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_margin="20px"
                android:backgroundTint="#EC4B81"
                android:text="Register"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>